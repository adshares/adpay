{
  "version": 1,
  "formatters": {
    "basic": {
      "format": "%(asctime)s %(name)-12s %(levelname)-6s %(message)s"
    }
  },
  "handlers": {
    "console": {
      "class": "logging.StreamHandler",
      "formatter": "basic",
      "level": "DEBUG"
    },
    "file": {
      "class": "logging.FileHandler",
      "formatter": "basic",
      "level": "DEBUG",
      "filename": "adpay.log"
    },
    "rotating_file": {
      "class": "logging.handlers.RotatingFileHandler",
      "formatter": "basic",
      "level": "DEBUG",
      "filename": "adpay.log",
      "maxBytes": 10737418240,
      "backupCount": 10
    }
  },
  "root": {
    "handlers": ["console"],
    "level": "DEBUG"
  }
}
